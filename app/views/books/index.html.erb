 <body>
  <h1>Books</h1>
  <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
    </tr>
   </thead>

   <tboby>
    <% @books.each do |book| %>
     <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
     </tr>
    <% end %>
   </tboby>
  </table>


  <h2>New book</h2>
  <div class = "new_book">
   <%= form_with model: @book, url: '/books', path: :post  do |f| %>
    <div class ="form_box">
     <label>Title</label>
     <div>
      <%= f.text_field :title %>
     </div>
    </div>
    <div class ="form_box">
     <label>Body</label>
     <div>
      <%= f.text_area :body %>
     </div>
    </div>
    <div class = "action">
     <%= f.submit 'Create Book' %>
    </div>
   <% end %>
  </div>

 </body>