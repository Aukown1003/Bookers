
<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <div class ="form_box">
   <label>Title</label>
   <div>
    <%= f.text_field :title %>
   </div>
  </div>

  <div class ="form_box">
   <label>Body</label>
   <div>
    <%= f.text_area :body %>
   </div>
  </div>
  <div class = "action">
   <%= f.submit 'Update book' %>
  </div>
<% end %>

<%= link_to "show", book_path(@book.id) %>
